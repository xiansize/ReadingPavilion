<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="380dp"
    android:layout_height="450dp"
    android:background="@drawable/shape_scan_qr_code"
    android:layout_centerInParent="true"
    >
    <!--android:background="#dddddd"-->

    <TextView
        android:id="@+id/tv_login_scan_qrcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_view_login_scan_qrcode_activity"
        android:textColor="@android:color/background_dark"
        android:textSize="32sp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"/>

    <ImageView
        android:id="@+id/iv_exit_scan_code_dialog"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_margin="34dp"
        android:src="@drawable/icon_exit"/>

    <View
        android:layout_width="160dp"
        android:layout_height="4dp"
        android:layout_below="@id/tv_login_scan_qrcode"
        android:background="@android:color/holo_blue_light"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/tv_message_login_scan_qrcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_login_scan_qrcode"
        android:text="@string/text_view_tips_login_scan_qrcode_activity"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:textSize="18sp"/>


    <ImageView
        android:id="@+id/iv_qr_scan_code_dialog"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="54dp"
        android:layout_below="@id/tv_login_scan_qrcode"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>