<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_book">

    <include
        android:id="@+id/tb_category_activity"
        layout="@layout/layout_title_bar"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_category_category_activity"
        android:layout_below="@id/tb_category_activity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:layout_centerInParent="true"></android.support.v7.widget.RecyclerView>





</RelativeLayout>
