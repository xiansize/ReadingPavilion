            <corners android:topLeftRadius="6dp"
                android:topRightRadius="6dp"
                android:bottomRightRadius="6dp"
                android:bottomLeftRadius="6dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@android:color/holo_purple" />
            <corners android:topLeftRadius="6dp"
