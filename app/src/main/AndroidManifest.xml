<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tcsoft.read">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.DISABLE_KEYGUARD" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon_reading"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".activity.LoginActivity">
            <intent-filter>

                <!-- <category android:name="android.intent.category.HOME"/> -->
                <!-- <category android:name="android.intent.category.DEFAULT"/> -->
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.BaseActivity" />
        <activity android:name=".activity.AudioActivity" />
        <activity android:name=".MainActivity" />
        <activity android:name=".activity.FunctionActivity" />
        <activity android:name=".activity.BookReadingActivity" />
        <activity android:name=".activity.UploadActivity" />
        <activity android:name=".activity.ScenarioReadingActivity" />
        <activity android:name=".activity.VoiceSearchActivity" />
        <activity android:name=".activity.TitleSearchActivity" />
        <activity android:name=".activity.CategorySearchActivity" />
        <activity android:name=".activity.SearchResultActivity" />
        <activity android:name=".activity.ScenarioShowActivity" />
        <activity android:name=".activity.SongActivity" />

        <receiver
            android:name=".receiver.TokenReceiver"
            android:enabled="true"
            android:exported="true" />

        <activity android:name=".activity.SucceedActivity" />
        <activity android:name=".activity.VersionActivity" />
        <activity android:name=".activity.BackgroundActivity" />
        <activity android:name=".activity.WelcomeActivity" />
        <activity android:name=".activity.ActivityActivity"></activity>
    </application>

</manifest>